 @model IEnumerable<Product>

<section class="header18 mbr-fullscreen mbr-parallax-background" id="header18-1">
    <div class="mbr-overlay" style="opacity:0.8; background-image: url('~/assets/images/pc-background.jpg'); background-size: cover;"></div>
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <h1 class="mbr-section-title mbr-fonts-style mbr-white mb-3 display-1">
                    <strong>Chào mừng bạn đến với Cửa hàng Máy tính</strong>
                </h1>
                <p class="mbr-text mbr-fonts-style mbr-white display-7">
                    Nơi bạn tìm thấy mọi linh kiện và thiết bị hoàn hảo.
                </p>
                <div class="mbr-section-btn mt-3">
                    <a class="btn btn-primary display-4" asp-controller="Products" asp-action="Shop">Đến cửa hàng ngay</a>
                </div>
            </div>
        </div>
    </div>
</section>
<br>
<section class="content2" id="new-products">
    <div class="container">
        <div class="mbr-section-head">
            <h4 class="mbr-section-title align-center mb-0 display-2"><strong>Mặt hàng bán chạy nhất!</strong></h4>
            <br>
            <h2>Các mặt hàng tiêu biểu trong tuần.</h2>
        </div>
        <div class="row mt-4">
            <div class="row mt-4">
                @foreach (var product in Model)
                {
                    <div class="item col-12 col-md-6 col-lg-4">
                        <div class="item-wrapper">
                            <div class="item-img">
                                <img src="@product.ImageUrl" alt="@product.Name" width="336" height="224">
                            </div>
                            <div class="item-content">
                                <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="item-subtitle mt-1 display-7"><strong>@product.Name</strong></a>
                                <p class="mbr-text mt-3 display-7">Giá: @product.Price.ToString("N0")đ</p>
                            </div>
                            <div class="mbr-section-btn item-footer mt-2">
                                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pId="@product.Id" class="btn btn-primary">
                                    <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span> them vao gio hang
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    </div>
</section>
<footer class="bg-light mt-5">
    <div class="bg-primary text-white py-4" style="background-color: #d7a86e !important;">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="mb-3 mb-md-0">
                <h5><i class="fas fa-envelope-open-text me-2"></i>Đăng ký nhận bản tin</h5>
                <p class="mb-0">Nhận thông tin mới nhất và ưu đãi hấp dẫn từ Computer Shop</p>
            </div>
            <form class="d-flex" onsubmit="return handleNewsletterSubmit(event)">
                <input id="emailInput" type="email" class="form-control me-2" placeholder="Nhập email của bạn..." required>
                <button class="btn btn-warning">Đăng ký</button>
            </form>
        </div>

        <!-- Đổi nền thông báo thành cam -->
        <div class="container mt-3" id="thankYouMessage" style="display: none;">
            <div class="alert text-white mb-0 text-center" role="alert" style="background-color: #d7a86e; font-size: 1.2rem;">
                Cảm ơn bạn đã đăng ký! Chúng tôi sẽ gửi thông tin sản phẩm mới nhất đến bạn sớm.
            </div>
        </div>
    </div>

    <script>
        function handleNewsletterSubmit(event) {
            event.preventDefault();
            const emailInput = document.getElementById("emailInput");
            const thankYouMessage = document.getElementById("thankYouMessage");

            if (emailInput.value.trim() !== "") {
                thankYouMessage.style.display = "block";
                emailInput.value = "";
            }

            return false;
        }
    </script>


    <!-- Nội dung chính của footer -->
    <div class="container py-5">
        <div class="row">
            <!-- Giới thiệu -->
            <div class="col-md-3">
