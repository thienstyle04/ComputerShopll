@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4" style="max-width: 480px; width: 100%; border-radius: 15px;">
        <div class="text-center">
            <h4 class="fw-bold mb-3">Bạn sắp đăng xuất khỏi tài khoản của mình</h4>
            <p class="text-muted">Bạn có chắc chắn muốn kết thúc phiên làm việc hiện tại không?</p>
        </div>

        <div class="mt-4 d-grid gap-3">
            <!-- Nút Đăng xuất -->
            <form method="post" class="d-grid">
                <button type="submit" class="btn btn-danger d-flex justify-content-center align-items-center gap-2 fw-bold" style="border-radius: 30px; padding: 12px;">
                    <i class="bi bi-box-arrow-right"></i> Đăng xuất ngay
                </button>
            </form>

            <!-- Nút Hủy bỏ -->
            <a asp-page="/Index" class="btn btn-outline-secondary d-flex justify-content-center align-items-center gap-2 fw-bold" style="border-radius: 30px; padding: 12px;">
                <i class="bi bi-x-circle"></i> Hủy bỏ
            </a>
        </div>
    </div>
</div>
